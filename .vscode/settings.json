{
    "emmet.triggerExpansionOnTab": true,
    "files.associations": {"*html": "html"},
    "emmet.useInlineCompletions": true,
    "colorize.languages": [

        "css",
        "html",
        "js",
        "sass",
        "scss",
        "less",
        "postcss",
        "sss",
        "stylus",
        "xml",
        "svg"
    ],
    "colorize.include": [
        

        "**/*.css",
        "**/*.js",
        "**/*.scss",
        "**/*.sass",
        "**/*.less",
        "**/*.styl"
    ],
    "liveServer.settings.port": 5501,
    "emmet.includeLanguages": {
        "html": "html",
        "css": "css"
    },
    "editor.tabCompletion": "on",
    "diffEditor.codeLens": true,

}